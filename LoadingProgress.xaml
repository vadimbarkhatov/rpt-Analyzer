<Window x:Class="CHEORptAnalyzer.LoadingProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CHEORptAnalyzer"
        mc:Ignorable="d"
        Title="Please Wait" Height="100.137" Width="320.182" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Icon="TextTemplate.ico">
    <Grid Margin="0,0,2,3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>
        <Label Name="lblLoadingText" Content="Loading reports...." Margin="10,0,0,0" HorizontalAlignment="Left" Height="30" Width="104" />
        <ProgressBar Name="loadingBar" Grid.Row="2" HorizontalAlignment="Center" Height="28" Margin="0,0,0,5" Width="292" Value="15" />

    </Grid>
</Window>
