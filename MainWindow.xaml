<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:CHEORptAnalyzer"  
        xmlns:FastColoredTextBoxNS="clr-namespace:FastColoredTextBoxNS;assembly=FastColoredTextBox" x:Class="CHEORptAnalyzer.MainWindow"  
        mc:Ignorable="d"
        Title="CHEO RPT Analyzer" Height="768" Width="1366">

    <Grid Margin="0,0,0,0">

        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Load Folder" Click="OpenFolder"/>
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>

            </Menu>
        </DockPanel>
        <TabControl Height="22" VerticalAlignment="Top" Margin="520,35,0,0" HorizontalAlignment="Left" Width="300" Panel.ZIndex="999" SelectionChanged="RadioButton_Checked">
            <TabControl.Resources>
                <local:ComparisonConverter x:Key="ComparisonConverter" />
            </TabControl.Resources>
            <TabItem Header="Columns" IsSelected="{Binding PreviewElement, ConverterParameter={x:Static local:CRElement.Field}, Converter={StaticResource ComparisonConverter}}" />
            <TabItem Header="Formula Fields" IsSelected="{Binding PreviewElement, ConverterParameter={x:Static local:CRElement.FormulaField}, Converter={StaticResource ComparisonConverter}}"/>
            <TabItem Header="Formula" IsSelected="{Binding PreviewElement, ConverterParameter={x:Static local:CRElement.Formula}, Converter={StaticResource ComparisonConverter}}"/>
            <TabItem Header="Command" IsSelected="{Binding PreviewElement, ConverterParameter={x:Static local:CRElement.Command}, Converter={StaticResource ComparisonConverter}}"/>
        </TabControl>

        <DockPanel HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" >
            <StackPanel HorizontalAlignment="Left"  VerticalAlignment="Top"  DockPanel.Dock="Top" Orientation="Horizontal">
                <Label Content="Report List" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <Label Content="{Binding Items.Count, ElementName=lbReports, Mode=OneWay}" ContentStringFormat="({0})" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50"/>
            </StackPanel>
            <ListBox x:Name="lbReports" ItemsSource="{Binding ReportItems, Mode=TwoWay}" Width="494"  Margin="0,0,0,0" SelectionChanged="LbReports_SelectionChanged" DockPanel.Dock="Top" Height="500"/>
            <StackPanel Margin="10,0,0,10" HorizontalAlignment="Left" Width="494" Orientation="Horizontal" VerticalAlignment="Bottom" DockPanel.Dock="Bottom">
                <GroupBox Header="Report Info" Width="329"  />
                <GroupBox Header="Search" VerticalAlignment="Top">
                    <StackPanel>
                        <StackPanel HorizontalAlignment="Left" Height="52" VerticalAlignment="Top" Width="147">
                            <CheckBox Content="Crystal Fields" IsChecked="{Binding SearchFields}"/>
                            <CheckBox Content="Record Select Formula" Height="15" IsChecked="{Binding SearchRF}"/>
                            <CheckBox Content="Command Objects" Height="15" IsChecked="{Binding SearchCommand}"/>
                        </StackPanel>
                        <Label HorizontalAlignment="Center" VerticalAlignment="Top" Width="136" >
                            <ComboBox x:Name="cbSearchMod" Width="126" SelectedIndex="0">
                                <ComboBoxItem x:Name="Contains" IsSelected="{Binding ContainsSeach, Mode=OneWayToSource}" Content="Contains" />
                                <ComboBoxItem x:Name="DNContain" Content="Does Not Contain"/>
                            </ComboBox>
                        </Label>
                        <TextBox x:Name="tbSearch" Height="23"  Width="123"  MaxLines="1" Text = "{Binding SearchString, Mode=TwoWay}"/>


                        <Button Content="Search Reports" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Width="123" Height="26" Click="BtnSearch_Click" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </DockPanel>




        



        <Border BorderThickness="1" Margin="520,55,10,10" BorderBrush="#FFABADB3">
            <DockPanel >
                <WindowsFormsHost x:Name="windowsFormsHost" Padding="0,0,20,20" >
                    <FastColoredTextBoxNS:FastColoredTextBox x:Name="textBox" ReadOnly="True" Paddings="1, 3, 3, 0" ShowLineNumbers="False" LeftBracket="(" RightBracket=")"/>
                </WindowsFormsHost>
            </DockPanel>
        </Border>




    </Grid>
</Window>
