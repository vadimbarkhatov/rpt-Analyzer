<Window x:Class="CHEORptAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CHEORptAnalyzer"
        mc:Ignorable="d"
        Title="CHEO RPT Analyzer" Height="592" Width="1331">


    <Grid Margin="0,0,0,0">

        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" />
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
            <StackPanel Orientation="Horizontal" Height="18" VerticalAlignment="Top" Width="220" Margin="0,17,10,0" HorizontalAlignment="Right">
                <RadioButton Content="Fields" Margin="0,0,3,0" IsChecked="True" Checked="RadioButton_Checked"/>
                <RadioButton Content="Formula" Margin="0,0,3,0" />
                <RadioButton Content="Command" Margin="0,0,3,0" />
            </StackPanel>
        </DockPanel>

        <Button Content="Search Reports" HorizontalAlignment="Left" Margin="290,507,0,0" VerticalAlignment="Top" Width="123" Height="26" RenderTransformOrigin="0.5,0.5" Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <ListBox Name="lbReports" HorizontalAlignment="Left" Height="371" Margin="10,62,0,0" VerticalAlignment="Top" Width="494" SelectionChanged="LbReports_SelectionChanged"/>
        <Button Content="Parse RPTs" HorizontalAlignment="Left" Margin="126,29,0,0" VerticalAlignment="Top" Width="90" Height="25" Click="ParseRPT"/>
        <TextBox x:Name="tbSearch" HorizontalAlignment="Left" Height="23" Margin="290,480,0,0" VerticalAlignment="Top" Width="122"  MaxLines="1" Text = "{Binding SearchString, Mode = TwoWay}"/>
        <RichTextBox x:Name="tbPreview" VerticalScrollBarVisibility="Visible" Margin="537,62,10,16"  IsReadOnly="True" FontFamily="Courier New" ScrollViewer.CanContentScroll="True"/>
        <StackPanel HorizontalAlignment="Left" Height="52" Margin="109,454,0,0" VerticalAlignment="Top" Width="147">
            <CheckBox Content="Crystal Fields" IsChecked="{Binding SearchFields}"/>
            <CheckBox Content="Record Select Formula" Height="15" IsChecked="{Binding SearchRF}"/>
            <CheckBox Content="Command Objects" Height="15" IsChecked="{Binding SearchCommand}"/>
        </StackPanel>
        <Label Content="Report List" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <Label Content="Preview" HorizontalAlignment="Left" Margin="532,29,0,0" VerticalAlignment="Top"/>
        <Label Content="Search (Contains)" HorizontalAlignment="Left" Margin="290,441,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="41,525,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
