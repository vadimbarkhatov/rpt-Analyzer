<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:CHEORptAnalyzer"  
        xmlns:FastColoredTextBoxNS="clr-namespace:FastColoredTextBoxNS;assembly=FastColoredTextBox" x:Class="CHEORptAnalyzer.MainWindow"  
        mc:Ignorable="d"
        Title="CHEO RPT Analyzer" Height="768" Width="1366">

    <Grid Margin="0,0,0,0">

        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Load Folder" Click="OpenFolder"/>
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>

            </Menu>
        </DockPanel>


        <StackPanel Orientation="Horizontal" Height="18" VerticalAlignment="Top" Margin="592,36,0,0" HorizontalAlignment="Left">
            <StackPanel.Resources>
                <local:ComparisonConverter x:Key="ComparisonConverter" />
            </StackPanel.Resources>
            <RadioButton Content="Columns" Margin="0,0,5,0" IsChecked="{Binding PreviewElement, ConverterParameter={x:Static local:CRElement.Field}, Converter={StaticResource ComparisonConverter}}" Checked="RadioButton_Checked"/>
            <RadioButton Content="Formula Fields" Margin="0,0,5,0" IsChecked="{Binding PreviewElement, ConverterParameter={x:Static local:CRElement.FormulaField}, Converter={StaticResource ComparisonConverter}}" Checked="RadioButton_Checked"/>
            <RadioButton Content="Formula" Margin="0,0,5,0" IsChecked="{Binding PreviewElement, ConverterParameter={x:Static local:CRElement.Formula}, Converter={StaticResource ComparisonConverter}}" Checked="RadioButton_Checked"/>
            <RadioButton Content="Command" Margin="0,0,5,0" IsChecked="{Binding PreviewElement, ConverterParameter={x:Static local:CRElement.Command}, Converter={StaticResource ComparisonConverter}}" Checked="RadioButton_Checked"/>
        </StackPanel>
        <DockPanel HorizontalAlignment="Left" VerticalAlignment="Top" >
            <Label Content="Report List" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" DockPanel.Dock="Top"/>
            <ListBox x:Name="lbReports" ItemsSource="{Binding ReportItems, Mode=TwoWay}" Width="494"  Margin="10,5,0,0" SelectionChanged="LbReports_SelectionChanged" DockPanel.Dock="Top" Height="500"/>
            <StackPanel Margin="10,0,0,10" HorizontalAlignment="Left" Width="494" Orientation="Horizontal" VerticalAlignment="Bottom" DockPanel.Dock="Bottom">
                <GroupBox Header="Report Info" Width="329"  />
                <GroupBox Header="Search" VerticalAlignment="Top">
                    <StackPanel>
                        <StackPanel HorizontalAlignment="Left" Height="52" VerticalAlignment="Top" Width="147">
                            <CheckBox Content="Crystal Fields" IsChecked="{Binding SearchFields}"/>
                            <CheckBox Content="Record Select Formula" Height="15" IsChecked="{Binding SearchRF}"/>
                            <CheckBox Content="Command Objects" Height="15" IsChecked="{Binding SearchCommand}"/>
                        </StackPanel>
                        <Label HorizontalAlignment="Center" VerticalAlignment="Top" Width="136" >
                            <ComboBox x:Name="cbSearchMod" Width="126" SelectedIndex="0">
                                <ComboBoxItem x:Name="Contains" IsSelected="{Binding ContainsSeach, Mode=OneWayToSource}" Content="Contains" />
                                <ComboBoxItem x:Name="DNContain" Content="Does Not Contain"/>
                            </ComboBox>
                        </Label>
                        <TextBox x:Name="tbSearch" Height="23"  Width="123"  MaxLines="1" Text = "{Binding SearchString, Mode=TwoWay}"/>


                        <Button Content="Search Reports" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Width="123" Height="26" Click="BtnSearch_Click" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </DockPanel>




        <Label Content="{Binding Items.Count, ElementName=lbReports, Mode=OneWay}" ContentStringFormat="({0})" HorizontalAlignment="Left" Margin="70,30,0,0" VerticalAlignment="Top" Width="50"/>
        <Label Content="Preview:" HorizontalAlignment="Left" Margin="523,30,0,0" VerticalAlignment="Top"/>


        <DockPanel>
            <WindowsFormsHost x:Name="windowsFormsHost" Margin="520,55,10,10" Padding="0,0,20,20"  >
                <FastColoredTextBoxNS:FastColoredTextBox x:Name="textBox" ReadOnly="True" Paddings="1, 3, 3, 0" TextAreaBorder="None" ShowLineNumbers="False" BorderStyle="FixedSingle" LeftBracket="(" RightBracket=")"/>
            </WindowsFormsHost>
        </DockPanel>





    </Grid>
</Window>
